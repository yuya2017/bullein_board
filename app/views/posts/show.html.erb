<ul class="cp_breadcrumb">
	<li><a href="/">ホーム</a></li>
	<li><a href="">詳細</a></li>
</ul>
<section id="show-main">
  <div class='show-message'>
    <%= @post.user.content %>
  </div>
	<div class="show-post">
		<div class="confirmation_form">
			<h5 class=confirmation_wrap>部屋名</h5>
			<p class="confirmation_text"><%= @room.name %></p>
		</div>
    <div class="confirmation_form">
      <h5 class=confirmation_wrap>棋力</h5>
      <p class="confirmation_text"><%= @post.chess %></p>
    </div>
    <div class="confirmation_form">
      <h5 class=confirmation_wrap>対戦したいアプリ</h5>
      <p class="confirmation_text"><%= @post.app %></p>
    </div>
    <div class="confirmation_form">
      <h5 class=confirmation_wrap>対戦時間</h5>
      <p class="confirmation_text"><%= @post.time %></p>
    </div>
    <div class="confirmation_form">
      <h5 class=confirmation_wrap>タグ</h5>
      <p class="confirmation_text"><%= @post.all_tag %></p>
    </div>
    <div class="confirmation_form">
      <h5 class=confirmation_wrap>募集内容</h5>
      <p class="confirmation_text"><%= @post.content %></p>
    </div>
	</div>
    <div class="show-button_left">
			<%= link_to 'チャットルーム',"/rooms/#{@room.id}", class: "btn-circle-3d", style:"text-decoration: none; color:#fff;" %>
    </div>
    <div class="show-button_right">
			<div class="btn-circle-3d" style="background:#00CC99" id="copybtn">URLコピー</div>
    </div>
		<% if user_signed_in? %>
			<% if @post.user_id == current_user.id then %>
				<div class="show-button_center">
					<%= link_to '編集',"/posts/#{@post.id}/edit", class: "btn-circle-3d", style:"text-decoration:none; color:#fff; background:#FF3366;" %>
				</div>
			<% end %>
		<% end %>

    <div class='show_bottom-content'>
